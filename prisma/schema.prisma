// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id              String    @id @default(cuid())
  nome            String
  username        String?
  genero          GENERO?
  email           String
  data_nascimento DateTime?
  pais            String
  senha           String
  criado_em       DateTime  @default(now())
  Endereco        Endereco?
  Role            ROLES     @default(ADMIN)

  @@map("user")
}

model Endereco {
  id                   String  @id @default(cuid())
  endereco_residencial String
  linha_um_endereco    String
  linha_dois_endereco  String
  cod_posta            String
  cidade               String
  usuario_id           String  @unique
  Usuario              Usuario @relation(fields: [usuario_id], references: [id])

  @@map("endereco")
}

model Empresa {
  id                  String              @id @default(cuid())
  endereco_comercial  String
  linha_um_endereco   String
  linha_dois_endereco String?
  cod_posta           String
  cidade              String
  tipo_empresa        TipoDaEmpresa       @relation(fields: [tipo_empresa_id], references: [id])
  tipo_empresa_id     String              @unique
  DetalhesdaEmpresa   DetalhesdaEmpresa?
  DetalhesDeExecuco   DetalhesDeExecucao?

  @@map("empresa")
}

model TipoDaEmpresa {
  id      String   @id @default(cuid())
  nome    String   @unique
  value   String?  @unique
  Empresa Empresa?

  @@map("tipo_da_empresa")
}

model DetalhesdaEmpresa {
  id        String   @id @default(cuid())
  sector    String
  site      String
  num_iva   String
  descricao String
  Empresa   Empresa? @relation(fields: [empresaId], references: [id])
  empresaId String?  @unique

  @@map("detalhes_da_empresa")
}

model DetalhesDeExecucao {
  id                 String       @id @default(cuid())
  vendas_mercadorias String
  tempo_entrega      TIME_ENTREGA @default(DENTRO_DE_DUAS_SEMANAS)
  Empresa            Empresa?     @relation(fields: [empresaId], references: [id])
  empresaId          String?      @unique

  @@map("detalhes_da_execucao")
}

model CodigoDeDiscagem {
  id     String @id @default(cuid())
  pais   String
  codigo String

  @@map("codigo_de_discagem")
}

enum GENERO {
  MASCULINO
  FEMININO
}

enum ROLES {
  ADMIN
  DEV
  GESTOR
}

enum TIME_ENTREGA {
  DENTRO_DE_UM_DIA
  DENTRO_DE_DUAS_SEMANAS
  DENTRO_DE_UM_MES
  MAIS_DE_UM_MES
}
